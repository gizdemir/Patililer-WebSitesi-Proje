@model Patililer.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Giris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!doctype html>
<html>
<head>
    <title>Giris</title>
    <meta charset="utf-8" />
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .prlogin9 {
            place-content: center;
            display: grid;
            place-items: center;
            font: 14px/130% 'Roboto', sans-serif;
            background: #fff;
            margin: 16px 0 16px 0;
        }

            .prlogin9 .prloginic {
                width: 100%;
            }

                .prlogin9 .prloginic .prloginforgot {
                    width: 100%;
                    text-align: right;
                    padding: 5px;
                }

                    .prlogin9 .prloginic .prloginforgot a {
                        text-decoration: none;
                        color: #666;
                    }

        .prloginic h1 {
            border-radius: 10px;
            background: #ffffff;
            width: 360px;
            margin: auto;
            margin-top: 20px;
            padding: 15px;
            text-align: center;
        }

        .prloginbox {
            margin-top: 10px;
        }

            .prloginbox label {
                display: block;
                padding-left: 10px;
                margin-bottom: 5px;
            }

            .prloginbox input {
                width: 100%;
                padding: 15px 20px;
                background: #f1f1f9;
                border-radius: 18px;
                border: 2px solid #c1c1c1;
                outline: none;
                transition: all .25s ease;
            }

                .prloginbox input:focus {
                    border-color: #f04747;
                }

        .prbtn {
            background: #f04747 !important;
            color: #fff !important;
            cursor: pointer;
            border: 0 !important;
            font-weight: bold;
        }

            .prbtn:hover {
                box-shadow: 0 10px 30px 0 rgb(240 71 71 / 70%);
            }

    </style>
</head>
<div class="prlogin9">
    <div class="prloginic">
        <form asp-controller="Hesap" asp-action="Giris" method="post">
            <h1>Giriş Yap</h1>
        <ul class="navbar-nav ">
            <li class="nav-item" "@ViewBag.Title==" Giris"?"active":"")">
                <a class="nav-link" href="@Url.Action("Giris", "Hesap")">  </a>


            </li>
            <div class="prloginbox">
             
                <input name="Emaill" placeholder="Kullanıcı Adı" autocomplete="off" id="text" type="text">
            </div>
            <div class="prloginbox">
                
                <input id="password" name="Passwordd" placeholder="Şifre" type="password">
            </div>
            <div class="prloginforgot">
                <a href="#">Şifremi unuttum</a>
            </div>
            <div class="prloginbox">
                <input class="prbtn" id="submit" type="submit" value="Giriş Yap">
            </div>
        </ul>
        </form>
    </div>
</div>
</html>
